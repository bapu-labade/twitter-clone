<!DOCTYPE html>
<html ng-app="myTwitter">
	<head>
	  <title>MyTwitter</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body class="user-style">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">My Twitter</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active">
              <%= link_to profiles_path do %>
                <i class="fa fa-home"></i> Home
              <% end %>
            </li>
            <li>
            <%= link_to "#" do %>
              <i class="fa fa-bell-o"></i> Notification
            <% end %>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-envelope"></i> Messages
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-users"></i> Users
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <%=link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
                <i class="fa fa-cog"></i> Setting <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
               <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"> </i> Logout
                  <% end %>
               </li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 flash_messages">
          <%= render "layouts/messages" %>  
    	    <%= yield %>
        </div>
      </div>
    </div>
	</body>
</html>